<BundleInfo name="ChimeraX_themes" 
            customInit="true"
            minSessionVersion="3"
            maxSessionVersion="3"
            package="themes"
            purePython="true"
            version="0.3.1">
            
            <Author>Tony Schaefer</Author>
            <Email>tony.schaefer@uga.edu</Email>
            <URL>https://github.com/ajs99778/ChimeraX_Themes</URL>
            <License>license.txt</License>
            <Synopsis>themes for ChimeraX UI</Synopsis>
            <Description>themes for ChimeraX UI
            </Description>
            
            <Categories>
                <Category name="UI"/>
            </Categories>
            
            <Dependencies>
                <Dependency name="ChimeraX-Core" version="~=1.2.dev"/>
            </Dependencies>

            <Managers>
                <Manager name="theme_manager" uiOnly="true"/>
            </Managers>
            
            <Providers manager="theme_manager">
                <Provider name="Default"/>
                <Provider name="solarized dark"/>
                <Provider name="solarized light"/>
                <Provider name="dark"/>
                <Provider name="molden"/>
            </Providers>

            <Classifiers>
                <PythonClassifier>Development Status :: 1 - Planning</PythonClassifier>
                <PythonClassifier>License :: OSI Approved :: The Unlicense (Unlicense)</PythonClassifier>
                <PythonClassifier>Framework :: ChimeraX</PythonClassifier>
                <PythonClassifier>Natural Language :: English</PythonClassifier>
                <PythonClassifier>Programming Language :: Python :: 3</PythonClassifier>
            </Classifiers>

    <DataFiles>
        <DataDir>style_sheets</DataDir>
        <DataDir>icons</DataDir>
    </DataFiles>

</BundleInfo>